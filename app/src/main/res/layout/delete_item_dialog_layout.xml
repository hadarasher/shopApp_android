<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/itemNameDialogView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textDirection="ltr"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="24dp"/>

        <LinearLayout
            android:id="@+id/descriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descriptionTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textColor="@color/brown"
                android:text="Description: " />

            <TextView
                android:id="@+id/descriptionDialogTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brown"
                android:layout_weight="0.3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/amountLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amountTitleTextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brown"
                android:layout_weight="0.7"
                android:text="Amount In Stock:" />

            <TextView
                android:id="@+id/amountDialogTextView"
                android:layout_width="match_parent"
                android:textColor="@color/brown"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDeleteDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Item"
            android:layout_margin="10dp"
            android:backgroundTint="@color/brown"
            android:textColor="@color/yellow"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonCancelDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_margin="10dp"
            android:backgroundTint="@color/brown"
            android:textColor="@color/yellow"
            android:textSize="20sp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>